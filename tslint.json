{
    "extends": "tslint-config-alloy",
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "quotemark":[true, "double"],
        "linebreak-style":false,
        "no-construct":false,
        "no-invalid-this":false,
        "callable-types":false
    },
    "linterOptions": {
        "exclude": [
            "**/node_modules/**"
        ]
    }
}